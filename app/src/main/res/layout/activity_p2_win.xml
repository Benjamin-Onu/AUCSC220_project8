<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".P2Win">



        <Button
            android:id="@+id/restart"
            android:layout_width="159dp"
            android:layout_height="171dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="300dp"
            android:background="@drawable/ic_restart_foreground"

            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/home"
            android:layout_width="143dp"
            android:layout_height="189dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_home_foreground"

            android:onClick="backToHomePage"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/defaultMessage"
            android:layout_width="785dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="194dp"
            android:text="PLAYER 2 WINS!"
            android:textColor="@color/black"
            android:textSize="75dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />
        <!--         this will be the message saying P2 won-->




</RelativeLayout>