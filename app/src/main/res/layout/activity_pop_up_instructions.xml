<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PopUpInstructions"
    android:background="@color/background"
>


    <TextView
        android:id="@+id/firstTurn"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="700dp"
        android:text="THE FIRST PERSON WILL BE CHOSEN AT RANDOM "
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/setBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="668dp"
        android:text="THE FIRST PERSON WILL BE SET AS BLACK "
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/setWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="636dp"
        android:text="THE SECOND PERSON WILL BE SET AS WHITE "
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/pVp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="564dp"
        android:text="IF PvP, EACH PERSON HAS ONLY 1 UNDO PER GAME"
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/pVAI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="600dp"
        android:text="IF PvAI, PLAYER WILL HAVE JUST 1 UNDO PER GAME"
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/C4W"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@id/pVAI"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="204dp"
        android:src="@drawable/connect_4_possible_wins"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/winDecision"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="128dp"
        android:text="THE WINNER IS DECIDED WHEN 4 GAME PIECES ARE CONNECTED "
        android:textColor="#000"
        android:textSize="11sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>